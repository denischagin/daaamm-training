<Page x:Class="Daamn.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Daamn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <StackPanel>
            <TextBlock Text="Войти" FontSize="30" Margin="0 0 0 50" />

            <Label Content="Логин" />
            <TextBox Margin="0 0 0 10" x:Name="LoginField" />

            <Label Content="Пароль" />
            <PasswordBox Margin="0 0 0 10" />

            <Button Content="Войти" Margin="0 0 0 10"/>
            <Button Content="Зарегистрироваться" Margin="0 0 0 10" />
        </StackPanel>
    </Grid>
</Page>
